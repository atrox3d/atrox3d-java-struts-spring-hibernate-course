<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Authentication filter web application</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>it.formarete.servlet.HelloWorld</servlet-class>
    <init-param>
      <param-name>name</param-name>
      <param-value>&quot;sono qui nel web.xml&quot;</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>it.formarete.servlet.Logout</servlet-class>
  </servlet>
  <filter>
    <filter-name>UserCookie</filter-name>
    <filter-class>it.formarete.filter.CookiesMap</filter-class>
    <init-param>
      <param-name>cookieNames</param-name>
      <param-value>USER</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>CookiesMap</filter-name>
    <filter-class>it.formarete.filter.CookiesMap</filter-class>
  </filter>
  <filter>
    <filter-name>Authentication</filter-name>
    <filter-class>it.formarete.filter.Authentication</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>HelloWorld</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/area-protetta/logout</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>UserCookie</filter-name>
    <url-pattern>/area-protetta/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Authentication</filter-name>
    <url-pattern>/area-protetta/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/login-errato.html</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>Logout</display-name>
    <servlet-name>Logout</servlet-name>
    <servlet-class>it.formarete.servlet.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
</web-app>